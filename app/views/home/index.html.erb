<script>
	document.addEventListener('DOMContentLoaded', function () {
		var myIndex = 0;
		carousel();

		function carousel() {
		    var i;
		    var x = document.getElementsByClassName("mySlides");
		    if( x )
		    for (i = 0; i < x.length; i++) {
		       x[i].style.display = "none";  
		    }
		    myIndex++;
		    if (myIndex > x.length) {myIndex = 1}    
		    x[myIndex-1].style.display = "inline-block";  
		    setTimeout(carousel, 3500); 
		}

		var feed1 = new Instafeed({
				target: "insta-images1",
        get: 'user',
        userId: '<%= ENV['YOUR_USER_ID'] %>',
        accessToken: '<%= ENV['YOUR_ACCESS_TOKEN'] %>',
        clientId: '<%= ENV['YOUR_CLIENT_ID'] %>',
        sortBy: 'most-recent',
        limit: 4,
        resolution: 'standard_resolution',
        template: '<img src="{{image}}" class="hideimage showimage"/>'
    });
    var feed2 = new Instafeed({
				target: "insta-images2",
        get: 'user',
        userId: '<%= ENV['YOUR_USER_ID'] %>',
        accessToken: '<%= ENV['YOUR_ACCESS_TOKEN'] %>',
        clientId: '<%= ENV['YOUR_CLIENT_ID'] %>',
        sortBy: 'most-recent',
        limit: 4,
        resolution: 'standard_resolution',
        template: '<img src="{{image}}" class="hideimage showimage2"/>'
    });
    var feed3 = new Instafeed({
				target: "insta-images3",
        get: 'user',
        userId: '<%= ENV['YOUR_USER_ID'] %>',
        accessToken: '<%= ENV['YOUR_ACCESS_TOKEN'] %>',
        clientId: '<%= ENV['YOUR_CLIENT_ID'] %>',
        sortBy: 'most-recent',
        limit: 4,
        resolution: 'standard_resolution',
        template: '<img src="{{image}}" class="hideimage showimage3"/>'
    });
    var feed4 = new Instafeed({
				target: "insta-images4",
        get: 'user',
        userId: '<%= ENV['YOUR_USER_ID'] %>',
        accessToken: '<%= ENV['YOUR_ACCESS_TOKEN'] %>',
        clientId: '<%= ENV['YOUR_CLIENT_ID'] %>',
        sortBy: 'most-recent',
        limit: 4,
        resolution: 'standard_resolution',
        template: '<img src="{{image}}" class="hideimage showimage4"/>'
    });
    feed1.run();
    feed2.run();
    feed3.run();
    feed4.run();
	});
</script>
