		<div class="col-md-5">
			<%= image_tag("https://s3.us-east-2.amazonaws.com/groundworkdetailing/ferrari.png", :alt => "rss feed") %>
		</div>
		<div class="col-md-7">
			<a href="/pricing"><p><%= @textboxes.find(4).content %></p></a>
			<% if user_signed_in? %>
				<a data-toggle="modal" data-target="#editmodal<%= @textboxes.find(4).id %>">
					<%= image_tag "https://s3.us-east-2.amazonaws.com/groundworkdetailing/editpen.png", :class => "editpen" %>
				</a>

				<div class="modal fade" id="editmodal<%= @textboxes.find(4).id%>" role="dialog" aria-hidden="true">
					<div class="modal-header">
				    <button type="button" class="close" data-dismiss="modal">&times;</button>
				    <h4 class="modal-title">Edit Textbox</h4>
				  </div>
					<div id="edit_fields" class="modal-body" >
				 		<%= form_for @textboxes.find(4) do |form| %>		  
				 			<div class="field">
						    <%= form.text_area :content, value: @textboxes.find(4).content %>
						  </div>
						  <div class="actions">
						    <%= form.submit %>
						  </div>
						<% end %>
					</div>
				</div>
			<% end %>

			<br>
			<p><%= render '/layouts/clicktoedit', number: 5 %></p>
		</div>
	</div>
